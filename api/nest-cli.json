{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      "i18n/**/*.json",
      {
        "include": "modules/notifications/templates/**/*.ejs",
        "outDir": "dist/src"
      }
    ],
    "watchAssets": true
  }
}
