<!-- Password Changed Email Template -->
<div style="padding: 20px 0;">
  <h2 style="color: #2d3748; margin-bottom: 20px;"><%= translations.passwordChanged.title %></h2>

  <p style="color: #4a5568; line-height: 1.6; margin-bottom: 20px;">
    <%= translations.passwordChanged.greeting %> <strong><%= fullName %></strong>,
  </p>

  <p style="color: #4a5568; line-height: 1.6; margin-bottom: 20px;">
    <%= translations.passwordChanged.message %>
  </p>

  <!-- Security Alert Box -->
  <div style="background-color: #f0fdf4; border-left: 4px solid #10b981; padding: 20px; margin: 20px 0; border-radius: 4px;">
    <p style="color: #065f46; margin: 0; line-height: 1.6;">
      <strong><%= translations.passwordChanged.successTitle %></strong><br>
      <%= translations.passwordChanged.successMessage %>
    </p>
  </div>

  <!-- Security Notice -->
  <div style="background-color: #fef2f2; border-left: 4px solid #ef4444; padding: 20px; margin: 20px 0; border-radius: 4px;">
    <h3 style="color: #991b1b; margin-top: 0; margin-bottom: 15px;">
      <%= translations.passwordChanged.notYouTitle %>
    </h3>
    <p style="color: #7f1d1d; margin: 0; line-height: 1.6;">
      <%= translations.passwordChanged.notYouMessage %>
    </p>
    <ul style="color: #7f1d1d; margin: 15px 0; padding-left: 20px;">
      <% translations.passwordChanged.notYouList.forEach(function(item) { %>
        <li style="margin: 8px 0;"><%= item %></li>
      <% }); %>
    </ul>
  </div>

  <!-- Security Tips -->
  <div style="background-color: #edf2f7; border-radius: 8px; padding: 16px; margin: 20px 0;">
    <p style="color: #2d3748; margin: 0 0 10px 0; font-weight: 600;">
      <%= translations.passwordChanged.tipsTitle %>
    </p>
    <ul style="color: #4a5568; margin: 0; padding-left: 20px;">
      <% translations.passwordChanged.tipsList.forEach(function(tip) { %>
        <li style="margin: 8px 0;"><%= tip %></li>
      <% }); %>
    </ul>
  </div>

  <!-- Closing -->
  <p style="color: #4a5568; line-height: 1.6; margin-top: 30px;">
    <%= translations.passwordChanged.regards %><br>
    <strong><%= translations.passwordChanged.team %></strong>
  </p>
</div>
