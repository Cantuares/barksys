<!-- Greeting Section -->
<table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="border-collapse: collapse;">
    <tr>
        <td style="padding-bottom: 32px; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
            <h2 style="color: #111827; font-size: 24px; font-weight: 700; margin: 0 0 24px 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
                <%- translations.trainingSessionEnrolled.title %>
            </h2>
            <p style="color: #374151; font-size: 16px; font-weight: 500; margin: 0 0 16px 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
                <%- translations.trainingSessionEnrolled.greeting %>, <%- tutorName %>,
            </p>
            <p style="color: #6b7280; font-size: 16px; line-height: 1.6; margin: 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
                <%- translations.trainingSessionEnrolled.message %>
            </p>
        </td>
    </tr>
</table>

<!-- Session Details Section -->
<table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="background-color: #f0fdf4; border: 1px solid #86efac; border-radius: 8px; margin-bottom: 32px; border-collapse: collapse;">
    <tr>
        <td style="padding: 32px; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">

            <h3 style="color: #166534; font-size: 20px; font-weight: 600; margin: 0 0 24px 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
                <%- translations.trainingSessionEnrolled.detailsTitle %>
            </h3>

            <!-- Pet Info -->
            <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="margin-bottom: 16px; border-collapse: collapse;">
                <tr>
                    <td style="padding: 12px 0; border-bottom: 1px solid #bbf7d0;">
                        <span style="color: #166534; font-size: 14px; font-weight: 500; display: block; margin-bottom: 4px;"><%- translations.trainingSessionEnrolled.petLabel %></span>
                        <span style="color: #14532d; font-size: 18px; font-weight: 700;"><%- petName %></span>
                    </td>
                </tr>
            </table>

            <!-- Session Info -->
            <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="border-collapse: collapse;">
                <tr>
                    <td style="padding: 12px 0; border-bottom: 1px solid #bbf7d0;">
                        <span style="color: #166534; font-size: 14px; font-weight: 500; display: block; margin-bottom: 4px;"><%- translations.trainingSessionEnrolled.dateLabel %></span>
                        <span style="color: #14532d; font-size: 16px; font-weight: 600;"><%- sessionDate %></span>
                    </td>
                </tr>
                <tr>
                    <td style="padding: 12px 0;">
                        <span style="color: #166534; font-size: 14px; font-weight: 500; display: block; margin-bottom: 4px;"><%- translations.trainingSessionEnrolled.timeLabel %></span>
                        <span style="color: #14532d; font-size: 16px; font-weight: 600;"><%- sessionStartTime %> - <%- sessionEndTime %></span>
                    </td>
                </tr>
            </table>

        </td>
    </tr>
</table>

<!-- Confirmation Section -->
<table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="background-color: #f0fdf4; border: 1px solid #86efac; border-radius: 8px; margin-bottom: 24px; border-collapse: collapse;">
    <tr>
        <td style="padding: 32px; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
            <h3 style="color: #166534; font-size: 18px; font-weight: 600; margin: 0 0 16px 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
                Confirm Your Attendance
            </h3>
            <p style="color: #14532d; font-size: 14px; margin: 0 0 24px 0; line-height: 1.6; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
                Please confirm that you and <%- petName %> will attend this training session.
            </p>

            <!-- Confirm Button -->
            <table role="presentation" cellspacing="0" cellpadding="0" border="0" style="margin-bottom: 0; border-collapse: collapse;">
                <tr>
                    <td style="border-radius: 6px; background-color: #16a34a; text-align: center;">
                        <a href="<%- confirmUrl %>" target="_blank" style="background-color: #16a34a; border: 1px solid #16a34a; border-radius: 6px; color: #ffffff; display: inline-block; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif; font-size: 16px; font-weight: 600; line-height: 50px; text-align: center; text-decoration: none; width: 100%; min-width: 200px; -webkit-text-size-adjust: none; mso-hide: all;">
                            Confirm Attendance
                        </a>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>

<!-- Cancellation Section -->
<table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="background-color: #fef2f2; border: 1px solid #fecaca; border-radius: 8px; margin-bottom: 32px; border-collapse: collapse;">
    <tr>
        <td style="padding: 32px; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
            <h3 style="color: #991b1b; font-size: 18px; font-weight: 600; margin: 0 0 16px 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
                <%- translations.trainingSessionEnrolled.cancelTitle %>
            </h3>
            <p style="color: #7f1d1d; font-size: 14px; margin: 0 0 24px 0; line-height: 1.6; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
                <%- translations.trainingSessionEnrolled.cancelMessage %>
            </p>

            <!-- Cancel Button -->
            <table role="presentation" cellspacing="0" cellpadding="0" border="0" style="margin-bottom: 16px; border-collapse: collapse;">
                <tr>
                    <td style="border-radius: 6px; background-color: #dc2626; text-align: center;">
                        <a href="<%- cancelUrl %>" target="_blank" style="background-color: #dc2626; border: 1px solid #dc2626; border-radius: 6px; color: #ffffff; display: inline-block; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif; font-size: 16px; font-weight: 600; line-height: 50px; text-align: center; text-decoration: none; width: 100%; min-width: 200px; -webkit-text-size-adjust: none; mso-hide: all;">
                            <%- translations.trainingSessionEnrolled.cancelButton %>
                        </a>
                    </td>
                </tr>
            </table>

            <p style="color: #7f1d1d; font-size: 13px; margin: 0; font-style: italic; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
                <%- translations.trainingSessionEnrolled.cancelNotice %>
            </p>
        </td>
    </tr>
</table>

<!-- Alternative Link Section -->
<table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="background-color: #f9fafb; border: 1px solid #e5e7eb; border-radius: 6px; margin-bottom: 32px; border-collapse: collapse;">
    <tr>
        <td style="padding: 24px; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
            <h4 style="color: #374151; font-size: 14px; font-weight: 600; margin: 0 0 12px 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
                <%- translations.trainingSessionEnrolled.alternativeTitle %>
            </h4>
            <p style="color: #6b7280; font-size: 13px; margin: 0 0 8px 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
                <%- translations.trainingSessionEnrolled.alternativeInstructions %>
            </p>
            <p style="color: #3b82f6; font-size: 12px; word-break: break-all; margin: 0; font-family: 'Courier New', monospace;">
                <%- cancelUrl %>
            </p>
        </td>
    </tr>
</table>

<!-- Important Notice -->
<table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="border-left: 4px solid #f59e0b; background-color: #fffbeb; border-radius: 6px; margin-bottom: 24px; border-top: 1px solid #fde68a; border-right: 1px solid #fde68a; border-bottom: 1px solid #fde68a; border-collapse: collapse;">
    <tr>
        <td style="padding: 24px; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
            <h4 style="color: #b45309; font-size: 16px; font-weight: 600; margin: 0 0 12px 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
                <%- translations.trainingSessionEnrolled.importantTitle %>
            </h4>
            <p style="color: #92400e; font-size: 14px; margin: 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
                <%- translations.trainingSessionEnrolled.importantMessage %>
            </p>
        </td>
    </tr>
</table>

<!-- Closing -->
<table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="border-collapse: collapse;">
    <tr>
        <td style="font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
            <p style="color: #111827; font-size: 16px; font-weight: 500; margin: 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
                <%- translations.trainingSessionEnrolled.regards %><br>
                <span style="color: #6b7280; font-weight: 400;"><%- translations.trainingSessionEnrolled.team %></span>
            </p>
        </td>
    </tr>
</table>
