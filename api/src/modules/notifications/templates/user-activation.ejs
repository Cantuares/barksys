<!-- Greeting Section -->
<table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="border-collapse: collapse;">
    <tr>
        <td style="padding-bottom: 32px; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
            <h2 style="color: #111827; font-size: 24px; font-weight: 700; margin: 0 0 24px 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
                <%- translations.activation.title %>
            </h2>
            <p style="color: #374151; font-size: 16px; font-weight: 500; margin: 0 0 16px 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
                <%- translations.activation.greeting %>
            </p>
            <p style="color: #6b7280; font-size: 16px; line-height: 1.6; margin: 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
                <%- translations.activation.thankYou %>
                <strong style="color: #d9534f; font-weight: 600;"><%- translations.activation.companyName %></strong>.
                <%- translations.activation.instructions %>
            </p>
        </td>
    </tr>
</table>

<!-- Main CTA Section -->
<table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="background-color: #f8fafc; border: 1px solid #e5e7eb; border-radius: 8px; margin-bottom: 32px; border-collapse: collapse;">
    <tr>
        <td style="padding: 32px; text-align: center; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">

            <h3 style="color: #111827; font-size: 20px; font-weight: 600; margin: 0 0 16px 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
                <%- translations.activation.confirmationTitle %>
            </h3>

            <p style="color: #6b7280; font-size: 14px; margin: 0 0 24px 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
                <%- translations.activation.validityNotice %>
            </p>

            <!-- CTA Button -->
            <table role="presentation" cellspacing="0" cellpadding="0" border="0" style="margin: 0 auto; border-collapse: collapse;">
                <tr>
                    <td style="background-color: #d9534f; border-radius: 6px; text-align: center;">
                        <a href="<%- activationUrl %>" style="display: inline-block; color: #ffffff; text-decoration: none; padding: 14px 28px; font-weight: 600; font-size: 16px; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif; border-radius: 6px;">
                            <%- translations.activation.buttonText %>
                        </a>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>

<!-- Alternative Link Section -->
<table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="background-color: #ffffff; border: 1px solid #e5e7eb; border-radius: 8px; margin-bottom: 24px; border-collapse: collapse;">
    <tr>
        <td style="padding: 24px; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
            <h4 style="color: #d9534f; font-size: 16px; font-weight: 600; margin: 0 0 12px 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
                <%- translations.activation.alternativeTitle %>
            </h4>
            <p style="color: #6b7280; font-size: 14px; margin: 0 0 16px 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
                <%- translations.activation.alternativeInstructions %>
            </p>
            <div style="background-color: #f9fafb; padding: 16px; border-radius: 6px; border: 1px solid #e5e7eb; word-break: break-all;">
                <a href="<%- activationUrl %>" style="color: #d9534f; text-decoration: none; font-family: 'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, 'Courier New', monospace; font-size: 12px; line-height: 1.4;">
                    <%- activationUrl %>
                </a>
            </div>
        </td>
    </tr>
</table>

<!-- Time Limit Notice -->
<table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="border-left: 4px solid #f59e0b; background-color: #fffbeb; border-radius: 6px; margin-bottom: 24px; border-top: 1px solid #fde68a; border-right: 1px solid #fde68a; border-bottom: 1px solid #fde68a; border-collapse: collapse;">
    <tr>
        <td style="padding: 24px; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
            <h4 style="color: #92400e; font-size: 16px; font-weight: 600; margin: 0 0 16px 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
                <%- translations.activation.timeLimitTitle %>
            </h4>
            <div style="color: #b45309; font-size: 14px; line-height: 1.6; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
                <% translations.activation.timeLimitList.forEach(function(item) { %>
                <p style="margin: 0 0 8px 0;">
                    • <%- item %>
                </p>
                <% }); %>
            </div>
        </td>
    </tr>
</table>

<!-- Not You Section -->
<table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="background-color: #ffffff; border: 1px solid #e5e7eb; border-radius: 8px; margin-bottom: 24px; border-collapse: collapse;">
    <tr>
        <td style="padding: 24px; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
            <h3 style="color: #d9534f; font-size: 16px; font-weight: 600; margin: 0 0 16px 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
                <%- translations.activation.notYouTitle %>
            </h3>
            <p style="color: #6b7280; font-size: 14px; margin: 0 0 16px 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
                <%- translations.activation.notYouInstructions %>
            </p>

            <div style="margin-bottom: 0;">
                <% translations.activation.notYouList.forEach(function(item) { %>
                <p style="margin: 0 0 8px 0; font-size: 14px; color: #4b5563; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
                    • <%- item %>
                </p>
                <% }); %>
            </div>
        </td>
    </tr>
</table>

<!-- Help Section -->
<table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="background-color: #eff6ff; border: 1px solid #bfdbfe; border-radius: 6px; margin-bottom: 32px; border-collapse: collapse;">
    <tr>
        <td style="padding: 20px; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
            <h3 style="color: #1e40af; font-size: 14px; font-weight: 600; margin: 0 0 8px 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
                <%- translations.activation.helpTitle %>
            </h3>
            <p style="color: #1e40af; font-size: 14px; margin: 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
                <%- translations.activation.helpMessage %>
            </p>
        </td>
    </tr>
</table>

<!-- Closing -->
<table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="border-collapse: collapse;">
    <tr>
        <td style="font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
            <p style="color: #6b7280; font-size: 14px; line-height: 1.6; margin: 0 0 24px 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
                <%- translations.activation.closingMessage %>
            </p>

            <p style="color: #111827; font-size: 16px; font-weight: 500; margin: 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
                <%- translations.activation.welcome %><br>
                <span style="color: #6b7280; font-weight: 400;"><%- translations.activation.team %></span>
            </p>
        </td>
    </tr>
</table>
