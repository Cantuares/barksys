<!-- Greeting Section -->
<table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="border-collapse: collapse;">
    <tr>
        <td style="padding-bottom: 32px; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
            <h2 style="color: #111827; font-size: 24px; font-weight: 700; margin: 0 0 24px 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
                <%- translations.packagePurchased.title %>
            </h2>
            <p style="color: #374151; font-size: 16px; font-weight: 500; margin: 0 0 16px 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
                <%- translations.packagePurchased.greeting %>, <%- adminName %>,
            </p>
            <p style="color: #6b7280; font-size: 16px; line-height: 1.6; margin: 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
                <%- translations.packagePurchased.message %>
            </p>
        </td>
    </tr>
</table>

<!-- Purchase Details Section -->
<table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="background-color: #f8fafc; border: 1px solid #e5e7eb; border-radius: 8px; margin-bottom: 32px; border-collapse: collapse;">
    <tr>
        <td style="padding: 32px; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">

            <h3 style="color: #111827; font-size: 20px; font-weight: 600; margin: 0 0 24px 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
                <%- translations.packagePurchased.detailsTitle %>
            </h3>

            <!-- Tutor Info -->
            <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="margin-bottom: 16px; border-collapse: collapse;">
                <tr>
                    <td style="padding: 12px 0; border-bottom: 1px solid #e5e7eb;">
                        <span style="color: #6b7280; font-size: 14px; font-weight: 500; display: block; margin-bottom: 4px;"><%- translations.packagePurchased.tutorLabel %></span>
                        <span style="color: #111827; font-size: 16px; font-weight: 600;"><%- tutorName %></span>
                    </td>
                </tr>
                <tr>
                    <td style="padding: 12px 0; border-bottom: 1px solid #e5e7eb;">
                        <span style="color: #6b7280; font-size: 14px; font-weight: 500; display: block; margin-bottom: 4px;"><%- translations.packagePurchased.emailLabel %></span>
                        <span style="color: #111827; font-size: 16px;"><%- tutorEmail %></span>
                    </td>
                </tr>
            </table>

            <!-- Package Info -->
            <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="margin-bottom: 16px; border-collapse: collapse;">
                <tr>
                    <td style="padding: 12px 0; border-bottom: 1px solid #e5e7eb;">
                        <span style="color: #6b7280; font-size: 14px; font-weight: 500; display: block; margin-bottom: 4px;"><%- translations.packagePurchased.packageLabel %></span>
                        <span style="color: #d9534f; font-size: 18px; font-weight: 700;"><%- packageName %></span>
                    </td>
                </tr>
                <tr>
                    <td style="padding: 12px 0; border-bottom: 1px solid #e5e7eb;">
                        <span style="color: #6b7280; font-size: 14px; font-weight: 500; display: block; margin-bottom: 4px;"><%- translations.packagePurchased.sessionsLabel %></span>
                        <span style="color: #111827; font-size: 16px; font-weight: 600;"><%- totalSessions %> <%- translations.packagePurchased.sessions %></span>
                    </td>
                </tr>
                <tr>
                    <td style="padding: 12px 0;">
                        <span style="color: #6b7280; font-size: 14px; font-weight: 500; display: block; margin-bottom: 4px;"><%- translations.packagePurchased.dateLabel %></span>
                        <span style="color: #111827; font-size: 16px;"><%- purchaseDate %></span>
                    </td>
                </tr>
            </table>

        </td>
    </tr>
</table>

<!-- Info Notice -->
<table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="border-left: 4px solid #3b82f6; background-color: #eff6ff; border-radius: 6px; margin-bottom: 24px; border-top: 1px solid #bfdbfe; border-right: 1px solid #bfdbfe; border-bottom: 1px solid #bfdbfe; border-collapse: collapse;">
    <tr>
        <td style="padding: 24px; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
            <h4 style="color: #1e40af; font-size: 16px; font-weight: 600; margin: 0 0 12px 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
                <%- translations.packagePurchased.infoTitle %>
            </h4>
            <p style="color: #1e40af; font-size: 14px; margin: 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
                <%- translations.packagePurchased.infoMessage %>
            </p>
        </td>
    </tr>
</table>

<!-- Closing -->
<table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="border-collapse: collapse;">
    <tr>
        <td style="font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
            <p style="color: #111827; font-size: 16px; font-weight: 500; margin: 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;">
                <%- translations.packagePurchased.regards %><br>
                <span style="color: #6b7280; font-weight: 400;"><%- translations.packagePurchased.team %></span>
            </p>
        </td>
    </tr>
</table>
